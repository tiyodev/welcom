extends ../layout

block content
  img.img-header-profile.img-fluid(src=data.profileHeaderPic alt="Profile header")
  .profile-social-icn.d-flex.flex-row.justify-content-center.align-items-center.flex-wrap
    .pl-5.pr-5
      a(href=data.facebookLink target="_blank")
        img(src="/images/facebook.png" alt="facebook")
    .pl-5.pr-5
      a(href=data.instagramLink target="_blank")
        img(src="/images/insta.png" alt="insta")
    .profile-social-icn-separator
    .pl-5.pr-5
      a(href=data.twitterLink target="_blank")
        img(src="/images/twitter.png" alt="twitter")
    .pl-5.pr-5
      a(href=data.webLink target="_blank")
        img(src="/images/darkHeart.png" alt="darkHeart")
  .img-profile.mx-auto
    img.img-profile-picture.rounded-circle(src=data.profilePic alt="Profile picture")

  #profile-content.m-auto.pb-6
    .pt-4.pb-4.text-center
      h2 #{data.displayName}
      h4.green-txt #{data.nbRecommendation} positive recommendations
      p.pt-2 
        | #{data.description} 
        br
        | #{data.languageSpokenDesc}

